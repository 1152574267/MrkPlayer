<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF">

    <LinearLayout
        android:id="@+id/uri_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_uri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:text="URL: "
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_uri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edittext"
            android:gravity="center"
            android:hint="@string/giraffe_player_url_empty"
            android:minHeight="40dp"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:textSize="12sp" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_play_online"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/uri_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_edittext"
        android:minWidth="120dp"
        android:text="@string/start_play_online"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_example"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_play_online"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="例如: http://ivi.bupt.edu.cn/hls/sdhd.m3u8"
        android:textColor="@android:color/black"
        android:textSize="12sp" />
</RelativeLayout>
